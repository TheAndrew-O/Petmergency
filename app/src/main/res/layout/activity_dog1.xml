<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dog1">
    <include layout="@layout/toolbar1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="166dp"
                android:layout_marginTop="2dp"
                android:fontFamily="sans-serif-black"
                android:text="Profile"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <ImageButton
                android:id="@+id/edit_profile"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/ic_baseline_edit_24" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="319dp"
            android:layout_height="174dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"

            android:orientation="horizontal"
            android:padding="3dp">

            <ImageView
                android:id="@+id/imgGallery"
                android:layout_width="174dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="66dp"
                android:src="@drawable/ic_dog1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="166dp"
                android:layout_marginTop="2dp"
                android:fontFamily="sans-serif-black"
                android:text="Rover"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <ImageButton
                android:id="@+id/switch_profile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ic_baseline_keyboard_arrow_down_24" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button_appointment"
                    android:layout_width="330dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:backgroundTint="@color/EmergencyRed"
                    android:padding="3dp"
                    android:text="Appoitments"
                    android:textColor="@color/White"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/button_medications"
                    android:layout_width="330dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:backgroundTint="@color/EmergencyRed"
                    android:padding="3dp"
                    android:text="Medication"
                    android:textColor="@color/White"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/button_notes"
                    android:layout_width="330dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:backgroundTint="@color/EmergencyRed"
                    android:padding="3dp"
                    android:text="Notes"
                    android:textColor="@color/White"
                    android:textSize="40sp" />

            </LinearLayout>


        </ScrollView>
    </LinearLayout>

</RelativeLayout>