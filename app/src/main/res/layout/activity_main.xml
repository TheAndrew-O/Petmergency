<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    tools:context=".MainActivity">


    <com.google.android.material.appbar.AppBarLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/app_bar_layout">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width = "match_parent"
            android:background="@color/EmergencyRed"
            android:layout_height = "?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_profile"
            app:title=" ">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/dog_icon">
            </ImageView>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_choke"
                android:layout_width="312dp"
                android:layout_height="140dp"
                android:layout_gravity="center"
                android:layout_marginTop="35dp"
                android:backgroundTint="@color/RoyalBlue"
                android:padding="3dp"
                android:text="Choking"
                android:textColor="@color/White"
                android:textSize="40sp" />

            <Button
                android:id="@+id/button_bleed"
                android:layout_width="312dp"
                android:layout_height="140dp"
                android:layout_gravity="center"
                android:layout_marginTop="35dp"
                android:backgroundTint="@color/EmergencyRed"
                android:padding="3dp"
                android:text="Bleeding"
                android:textColor="@color/White"
                android:textSize="40sp" />

            <Button
                android:id="@+id/button_breath"
                android:layout_width="312dp"
                android:layout_height="140dp"
                android:layout_gravity="center"
                android:layout_marginTop="35dp"
                android:backgroundTint="@color/Goldenrod"
                android:padding="3dp"
                android:text="Not Breathing"
                android:textColor="@color/White"
                android:textSize="40sp" />

            <Button
                android:id="@+id/button_call"
                android:layout_width="312dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="35dp"
                android:backgroundTint="@color/LimeGreen"
                android:padding="3dp"
                android:text="Call Vet"
                android:textColor="@color/White"
                android:textSize="40sp" />

        </LinearLayout>


    </ScrollView>


</RelativeLayout>