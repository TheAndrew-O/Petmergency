<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="vertical"
        android:background="@color/EmergencyRed"
        android:padding="5dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="180dp"
            android:layout_marginBottom="5dp"
            android:padding="4dp"
            android:src="@drawable/dog_icon">
        </ImageView>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="60dp">

            <Button
                android:id="@+id/button_choke"
                android:layout_width="319dp"
                android:layout_height="154dp"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                android:padding="3dp"
                android:text="Choking"
                android:textSize="40sp"
                android:backgroundTint="@color/RoyalBlue"
                />

            <Button
                android:id="@+id/button_bleed"
                android:layout_width="319dp"
                android:layout_height="154dp"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                android:padding="3dp"
                android:text="Bleeding"
                android:textSize="40sp"
                android:backgroundTint="@color/EmergencyRed"
                />

            <Button
                android:id="@+id/button_breath"
                android:layout_width="319dp"
                android:layout_height="154dp"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                android:padding="3dp"
                android:text="Not Breathing"
                android:textSize="40sp"
                android:backgroundTint="@color/Goldenrod"
                />


        </LinearLayout>

    </ScrollView>


</RelativeLayout>